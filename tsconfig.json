{
  "compilerOptions": {
    "module": "NodeNext",
    "target": "ES2022",
    "noEmit": true,
    "checkJs": true,
    "strict": true,
    "allowJs": true,
    "declaration": true,
    "emitDeclarationOnly": false,
    "skipLibCheck": true,
    "outDir": "types",
    "types": [
      "@types/node",
      "@types/clean-css",
      "@types/html-minifier-terser"
    ]
  }
}
