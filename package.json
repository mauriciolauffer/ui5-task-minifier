    "html-minifier-terser": "^7.2.0"
  },
  "devDependencies": {
    "@microsoft/eslint-formatter-sarif": "^3.0.0",
    "@types/clean-css": "^4.2.6",
    "@types/html-minifier-terser": "^7.0.0",
    "@types/node": "^20.2.5",
    "eslint": "^8.42.0",
    "eslint-config-mlauffer-nodejs": "^1.4.1"
